{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "env": ["BASE"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["BASE"]
    },
    "test:a11y": {},
    "test:a11y:ci": {},
    "test:visual_regression": {
      "env": ["BASE_URL"]
    },
    "test:visual_regression:update": {
      "env": ["BASE_URL"]
    }
  }
}
